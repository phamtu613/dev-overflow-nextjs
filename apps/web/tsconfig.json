{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@repo/ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@repo/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@repo/utils": [
        "../../packages/utils/src/index.ts"
      ],
      "@repo/utils/*": [
        "../../packages/utils/src/*"
      ],
      "@repo/hooks": [
        "../../packages/hooks/src/index.ts"
      ],
      "@repo/hooks/*": [
        "../../packages/hooks/src/*"
      ],
      "@repo/schemas": [
        "../../packages/schemas/src/index.ts"
      ],
      "@repo/schemas/*": [
        "../../packages/schemas/src/*"
      ],
      "@repo/client": [
        "../../packages/client/api-client.ts"
      ],
      "@repo/client/*": [
        "../../packages/client/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}